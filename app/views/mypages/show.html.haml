.all-wrapper
  .mypage-main-container
  -if user_signed_in?
    =render "items/header"
  -else
    =render "items/header-unlogin"
  - breadcrumb :mypages
  = render "layouts/breadcrumbs_white"
  %main.mypage-container
    = render 'content'
    = render 'side-bar'

  .selling-item-box
    = link_to new_item_path, class: "selling-item-box__link" do
      .selling-item-box__contents
        .selling-item-box__contents__letter 出品
        = icon('fas', 'camera', alt: 'camera',class: 'selling-item-box__contents__camera')
  = render 'items/footer'
    